<android.support.v7.widget.CardView android:id="@+id/id_cardview"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@color/white"
                                    app:contentPadding="2dp"
                                    android:layout_marginBottom="10dp"
                                   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

       >

            <ImageView
                android:id="@+id/notes_image"
                android:transitionName="@string/transition_book_img"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/main_2"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最美厦门"
                    android:textSize="18sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015.8.14/3图"
                    android:textSize="16sp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notes_image"
            android:padding="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12313"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/my_lezhi_browse"
                android:textColor="@color/black_grey"
                android:drawablePadding="10dp"
                android:textSize="18sp"/>
              <View
                  android:layout_width="0dp"
                  android:layout_height="1dp"
                  android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="5632"
                android:drawableLeft="@drawable/my_lezhi_review"
                android:textColor="@color/black_grey"
                android:drawablePadding="10dp"
                android:textSize="16sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="5632"
                android:layout_marginRight="20dp"
                android:drawableLeft="@drawable/my_collect"
                android:textColor="@color/black_grey"
                android:drawablePadding="10dp"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>