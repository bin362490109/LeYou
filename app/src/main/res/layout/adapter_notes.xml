<android.support.v7.widget.CardView
    android:id="@+id/id_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="10dp"
    android:onClick="notesCard"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/notes_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/main_2"
            android:scaleType="fitXY"
            android:transitionName="@string/transition_book_img"
            />


        <TextView
            android:id="@+id/adapter_notes_lezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/lezhi_browse"
            android:drawablePadding="5dp"
            android:text="12313"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/adapter_notes_lezhi"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/adapter_notes_lezhi"
            android:drawableLeft="@drawable/lezhi_review"
            android:drawablePadding="5dp"
            android:text="5632"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/adapter_notes_lezhi_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/notes_image"
            android:layout_marginBottom="10dp"
            android:layout_alignLeft="@id/adapter_notes_lezhi"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/lezhi_pin"
            android:drawablePadding="5dp"
            android:text="5632"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/adapter_notes_lezhi_pin"
            android:layout_alignLeft="@id/adapter_notes_lezhi_pin"
            android:text="中国最美高铁带你去旅游"
            android:textSize="18sp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>