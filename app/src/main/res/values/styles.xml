<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/other_bg</item>
        <item name="colorPrimaryDark">@color/other_bg</item>
        <item name="colorAccent">@color/green</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/other_bg</item>
        </style>
    <style name="AppThemeNoWindowColor" parent="BaseAppTheme">
        <item name="android:windowBackground">@color/white</item>
        </style>


    <style name="CardView.Content" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextNoBackgroundTheme">
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:height">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="EditTextNoBackgroundTheme.loginTextcolor" parent="EditTextNoBackgroundTheme">
        <item name="android:textColor">@color/login_textcolor_selector</item>
        <item name="android:textColorHint">@color/login_textcolorhint_selector</item>
    </style>

    <style name="EditTextNoBackgroundTheme.RegistTextcolor" parent="EditTextNoBackgroundTheme">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textColor">@color/regist_textcolor_selector</item>
        <item name="android:textColorHint">@color/regist_textcolorhint_selector</item>
    </style>

    <style name="noBackgroundDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyDialog" parent="android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="DialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

</resources>
