<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:gravity="center" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >
			
			<!-- 新浪微博授权跟注销 -->
			<Button
                android:id="@+id/login_sina"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_sina" />
			<Button
                android:id="@+id/logout_sina"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout_sina" />
			<!-- QQ授权跟注销 -->
			<Button
                android:id="@+id/login_qq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/login_qq" />
			<Button
                android:id="@+id/logout_qq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout_qq" />
			<!-- QQ空间授权跟注销 -->
			<Button
                android:id="@+id/login_qzone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/login_qzone" />
			<Button
                android:id="@+id/logout_qzone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout_qzone" />
			
            <Button
                android:id="@+id/shake_openshare"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/shake_openshare" />

            <Button
                android:id="@+id/shake_share"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/shake_share" />

            <Button
                android:id="@+id/shake_scrshot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/shake_scrshot" />

            <ImageView
                android:id="@+id/scrshot_imgview"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:contentDescription="@string/take_scrshot" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>